<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PDVActivity"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/primary"
    android:id="@+id/llpdv">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="top|left"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:backgroundTint="@color/secundary_variant"
        app:srcCompat="@drawable/ic_rrow_back"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:text="Puntos de Venta"
            android:textAllCaps="true"
            android:textColor="@color/secundary_dark"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/map" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/editTextNombrePDV"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:hint="Nombre"/>

            <EditText
                android:id="@+id/editTextCodigoPDV"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:hint="Codigo"
                android:inputType="number"
                android:maxLength="10"/>

            <EditText
                android:id="@+id/editTextDireccionPDV"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Direccion"/>

        </LinearLayout>


        <Button
            android:id="@+id/btnAddPDV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar PDV"
            android:textColor="@color/secundary_dark"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_margin="30dp"/>


    </LinearLayout>


</LinearLayout>