<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PDVVisitaActivity"
    android:fitsSystemWindows="true"
    android:id="@+id/linearLayoutVisit"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:id="@+id/toolbar"
        android:background="@color/secundary_variant"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">

        <ImageView
            android:id="@+id/backMenu"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_rrow_back"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Visita"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_marginLeft="30dp"
            android:textStyle="bold"/>


    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/textViewNombreVisit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Metro Alfonso Ugarte"
                android:textStyle="bold"
                android:textSize="25dp"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:id="@+id/textViewDireccionVisit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textAlignment="center"
                android:text="AV. ALFONSO UGARTE 740"/>

            <ImageButton
                android:id="@+id/imgBtnPhoto"

                android:layout_marginTop="40dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/ic_baseline_photo_camera_24"
                android:scaleType="centerCrop"/>
            
            <Button
                android:id="@+id/btnVisit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:text="VISITAR"
                />
        </LinearLayout>




    </FrameLayout>


</LinearLayout>