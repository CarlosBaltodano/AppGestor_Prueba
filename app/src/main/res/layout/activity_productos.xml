<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ProductosActivity"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:id="@+id/toolbar"
        android:background="@color/secundary_variant"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">

        <ImageView
            android:id="@+id/backMenuProd"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_rrow_back"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Productos"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_marginLeft="30dp"
            android:textStyle="bold"/>


    </androidx.appcompat.widget.Toolbar>


    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="30dp">

            <EditText
                android:id="@+id/editTextNombre"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Nombre"
                android:layout_marginBottom="15dp"
                android:inputType="text"/>

            <EditText
                android:id="@+id/editTextCosto"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Costo"
                android:layout_marginBottom="15dp"
                android:inputType="numberDecimal"/>

            <EditText
                android:id="@+id/editTextMayor"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="P.Rvta Mayor"
                android:layout_marginBottom="15dp"
                android:inputType="numberDecimal"/>

            <EditText
                android:id="@+id/editTextStock"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Stock"
                android:layout_marginBottom="15dp"
                android:inputType="number"/>

            <Spinner
                android:id="@+id/spnProducto"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="15dp"/>

            <Button
                android:id="@+id/btnAddProducto"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guardar Producto"/>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>